<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="letra_parent" >
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>

    </style>
    <style name="letra_1_sliders" parent="letra_parent">

    </style>
    <style name="letra_1" parent="letra_parent" >

    </style>


    <style name="letra_botão" parent="letra_parent">

        <item name="android:textSize">10sp</item>

        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="letra_botão.amarelo" parent="letra_botão">
        <item name="android:background">@drawable/btn_yellow</item>
        <item name="android:textColor">@android:color/darker_gray</item>


    </style>

    <style name="letra_botão.verde" parent="letra_botão">
        <item name="android:background">@drawable/btn_green</item>

    </style>
    <style name="letra_botão.verde_escuro" parent="letra_botão">
        <item name="android:background">@drawable/btn_green_escuro</item>
        <item name="android:textColor">@android:color/darker_gray</item>

    </style>
    <style name="letra_botão.laranja" parent="letra_botão">
        <item name="android:background">@drawable/btn_orange</item>
    </style>
    <style name="letra_botão.red" parent="letra_botão">
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="letra_botão.azul" parent="letra_botão">
        <item name="android:background">@drawable/btn_blue</item>
    </style>

    <style name="painel">
        <item name="android:background">@drawable/btn_black</item>
    </style>

    <style name="parent_velocimetro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:bottomLeftRadius">30dp</item>
        <item name="android:bottomRightRadius">30dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:text">0</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:textColor">#ff00dbff</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:topLeftRadius">30dp</item>
        <item name="android:topRightRadius">30dp</item>
        <item name="android:typeface">normal</item>
        <item name="android:inputType">number</item>
        <item name="font">digdream</item>


    </style>
    <style name="velocimetro_azul_sliders" parent="parent_velocimetro">
        <item name="android:textSize">80sp</item>


    </style>

    <style name="velocimetro_azul" parent="parent_velocimetro">

        <item name="android:textSize">95sp</item>


    </style>

    <style name="tipoTrecho" parent="parent_velocimetro">

        <item name="android:textSize">44sp</item>
        <item name="android:inputType">text</item>
        <item name="font">dig7Reg</item>

        <item name="android:text">-</item>
    </style>

    <style name="digitoNumTrecho" parent="parent_velocimetro">

        <item name="android:textSize">28sp</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">0dp</item>
        <!--<item name="font">dig7Reg</item>-->
        <item name="android:text">-</item>
    </style>




    <style name="velocimetro_pequeno_sliders" parent="velocimetro_azul_sliders">

        <item name="android:textSize">60sp</item>
    </style>
    <style name="velocimetro_pequeno" parent="velocimetro_azul">

    <item name="android:textSize">60sp</item>
</style>

    <style name="velocimetro_vermelho_sliders" parent="velocimetro_azul_sliders">
        <item name="android:textColor">#f00</item>
        <item name="android:textColorHighlight">@color/abc_search_url_text_pressed</item>
    </style>
    <style name="velocimetro_vermelho" parent="velocimetro_azul">
        <item name="android:textColor">#f00</item>
        <item name="android:textColorHighlight">@color/abc_search_url_text_pressed</item>
    </style>


    <style name="MyListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/background_back</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="MyListFrontContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/background_front</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="MyListButtonAction">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>

    </style>
    <style name = "MyListImageButtonAction" >
        <item name= "android:background">@android:color/transparent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="MyListImage">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleGravity">fill</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:scaleX">1.3</item>
        <item name="android:scaleY">1.3</item>
    </style>

    <style name="MyListTitle">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>

        <!-- <item name="android:maxLines">2</item> -->
        <item name="android:ellipsize">end</item>
    </style>

    <style name = "MyListTitleChecked" >
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <!-- <item name="android:maxLines">2</item> -->
        <item name="android:ellipsize">end</item>
    </style>



</resources>